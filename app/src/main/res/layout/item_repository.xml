<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/_16dp">

    <TextView
        android:id="@+id/repositoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/repositoryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:id="@+id/repositoryLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/_14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repositoryStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/star_svgrepo_com"
            android:drawablePadding="@dimen/_2dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/repositoryForks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:drawableStart="@drawable/git_fork_svgrepo_com"
            android:drawablePadding="@dimen/_2dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>
</LinearLayout>
